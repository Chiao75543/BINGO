<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
    <variable
        name="ViewModel"
        type="com.example.bingo.ViewModel"/>
    </data>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        android:columnCount="4"
        android:rowCount="6"
        android:visibility="visible"
        tools:context=".MainActivity">"
        <TextView
            android:id="@+id/NextNumber"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@{ViewModel.Number}"/>
        <TextView
            android:id="@+id/text1"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50dip"
            android:maxLength="1"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:text="@{ViewModel.data1}"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50dip"
            android:maxLength="1"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:text="@{ViewModel.data2}"/>
        <TextView
            android:id="@+id/text3"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50dip"
            android:maxLength="1"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:text="@{ViewModel.data3}"/>
        <TextView
            android:id="@+id/text4"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50dip"
            android:maxLength="1"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:text="@{ViewModel.data4}"/>
        <TextView
            android:id="@+id/text5"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50dip"
            android:maxLength="1"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:text="@{ViewModel.data5}"/>
        <TextView
            android:id="@+id/text6"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50dip"
            android:maxLength="1"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:text="@{ViewModel.data6}"/>
        <TextView
            android:id="@+id/text7"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50dip"
            android:maxLength="1"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:text="@{ViewModel.data7}"/>
        <TextView
            android:id="@+id/text8"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50dip"
            android:maxLength="1"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:text="@{ViewModel.data8}"/>
        <TextView
            android:id="@+id/text9"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50dip"
            android:maxLength="1"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:text="@{ViewModel.data9}"/>
        <Button
            android:id="@+id/start"
            android:layout_column="2"
            android:layout_row="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dip"
            android:text="開始遊戲"/>
        <Button
            android:id="@+id/next"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下一個數字" />
        <Button
            android:id="@+id/restart"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重新開始" />

    "</GridLayout>
</layout>